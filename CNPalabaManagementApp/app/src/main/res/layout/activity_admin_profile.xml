                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="1"
                        android:textColor="@color/dark_color"
                        android:textFontWeight="300"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"
                        android:text="View Employee Information"
                        android:textColor="@color/dark_color"
                        android:textFontWeight="200"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/expand_employee_info"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/baseline_arrow_drop_down_24" />
                </LinearLayout>

                <TextView
                    android:id="@+id/employee_info_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter"
                    android:text="Allows the app to access and display employee details for management purposes."
                    android:textColor="@color/dark_color"
                    android:textFontWeight="100"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 2. Camera Access -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/permission_item_background"
                android:orientation="vertical"
                android:paddingStart="15dp"
