                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="2"
                        android:textColor="@color/dark_color"
                        android:textFontWeight="300"
                        android:textSize="16sp"
