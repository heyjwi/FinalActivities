<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@drawable/rounded_bottom_mask"
                android:clipToOutline="true"
                android:elevation="8dp"
                android:layout_margin="0dp"
                android:padding="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/three_red" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="51dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="40dp"
                        android:fontFamily="@font/inter"
                        android:text="My Profile"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
                        app:layout_constraintEnd_toStartOf="@+id/edit_profile_photo"
                        app:layout_constraintStart_toEndOf="@+id/backButton_adminProfile"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/backButton_adminProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="54dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView2"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_arrow_back_24" />

                    <ImageView
                        android:id="@+id/edit_profile_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/backButton_adminProfile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView2"
                        app:layout_constraintTop_toTopOf="@+id/backButton_adminProfile"
                        app:srcCompat="@drawable/baseline_edit_24" />

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="120dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_white_stroke"
                        app:layout_constraintBottom_toTopOf="@+id/username"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:clipToOutline="true"
                            android:outlineProvider="background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_user" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="34dp"
                        android:fontFamily="@font/inter"
                        android:text=""
                        android:textColor="@color/white"
                        android:textFontWeight="200"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>


            <TextView
